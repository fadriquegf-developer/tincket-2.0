<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
    bootstrap="vendor/autoload.php"
    colors="true"
>
    <testsuites>
        <!-- Tests crÃ­ticos que DEBEN pasar antes de deploy -->
        <testsuite name="Critical">
            <file>tests/Feature/RedisPerformanceTest.php</file>
            <file>tests/Unit/NPlus1QueriesTest.php</file>
            <file>tests/Unit/InscriptionRaceConditionTest.php</file>
        </testsuite>

        <!-- Todos los tests -->
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory>app</directory>
        </include>
    </source>

    <php>
        <env name="APP_ENV" value="testing" />
        <env name="CACHE_DRIVER" value="redis" />
        <env name="DB_CONNECTION" value="mysql" />
        <env name="DB_DATABASE" value="yesweticket_dev" />
        <env name="QUEUE_CONNECTION" value="sync" />
        <env name="SESSION_DRIVER" value="array" />
    </php>
</phpunit>